<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@color/colorBackground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:padding="16dp"
            android:background="@drawable/out_line_bg"
            android:id="@+id/tv_username"
            android:textSize="@dimen/font_normal"
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/ip_alter_tv"
            android:layout_marginTop="32dp"
            android:padding="16dp"
            android:text="@string/alter_ip"
            android:background="@drawable/out_line_bg"
            android:textSize="@dimen/font_normal"
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <LinearLayout
            android:layout_marginTop="32dp"
            android:background="@drawable/out_line_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:padding="16dp"
                android:text="@string/wlan_4g_auto_switch"
                android:textSize="@dimen/font_normal"
                android:textColor="@color/white"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />

            <com.iustu.identification.ui.widget.SwitchButton
                android:layout_marginRight="16dp"
                android:layout_marginEnd="16dp"
                android:id="@+id/wlan_4g_sb"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_version"
            android:layout_marginTop="32dp"
            android:padding="16dp"
            android:background="@drawable/out_line_bg"
            android:textSize="@dimen/font_normal"
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>
</android.support.v4.widget.NestedScrollView>