<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:paddingBottom="@dimen/y10"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/colorBackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.iustu.identification.ui.widget.TitleBar
        app:backEnable="true"
        app:sureEnable="true"
        app:title="所有图片"
        android:id="@+id/title_bar_img_choose"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y100">
        <LinearLayout
            android:id="@+id/select_all_layout"
            android:layout_marginLeft="@dimen/x160"
            android:paddingLeft="@dimen/x10"
            android:paddingRight="@dimen/x10"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/y100"
            tools:ignore="RtlHardcoded">
            <TextView
                android:id="@+id/select_all_tv"
                android:textColor="@color/lite_blue"
                android:layout_gravity="center_vertical"
                android:textSize="@dimen/y42"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="@string/select_all"
                android:layout_marginLeft="@dimen/x10"
                android:textColor="@color/white"
                android:layout_gravity="center_vertical"
                android:textSize="@dimen/y42"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </com.iustu.identification.ui.widget.TitleBar>

    <com.iustu.identification.ui.widget.TabBar
        android:id="@+id/tab_bar"
        android:background="@drawable/img_choose_back"
        android:layout_marginTop="@dimen/y25"
        android:layout_marginBottom="@dimen/y25"
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/x200"
        android:layout_marginRight="@dimen/x200"
        android:layout_height="@dimen/y80">
    </com.iustu.identification.ui.widget.TabBar>

    <android.support.v7.widget.RecyclerView
        android:overScrollMode="never"
        android:background="@drawable/out_line_bg"
        android:layout_marginLeft="@dimen/x30"
        android:layout_marginRight="@dimen/x30"
        android:id="@+id/img_choose_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
</LinearLayout>