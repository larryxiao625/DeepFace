<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    tools:ignore="RtlHardcoded,RtlSymmetry"
    tools:background="@drawable/out_line_bg"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <TextView
        android:layout_marginTop="@dimen/y16"
        android:layout_marginLeft="@dimen/x40"
        android:layout_marginRight="@dimen/x40"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="人脸查询条件"
        android:textColor="@color/DODGERBLUE"/>

    <LinearLayout
        android:layout_marginTop="@dimen/y35"
        android:layout_marginLeft="@dimen/x40"
        android:layout_marginRight="@dimen/x40"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/search_name_et"
            android:textColor="@color/WHITE"
            android:scaleType="centerInside"
            android:hint="姓名"
            android:textColorHint="@color/white"
            android:textSize="@dimen/x40"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/search_identity_et"
            android:textColor="@color/WHITE"
            android:scaleType="centerInside"
            android:hint="身份证号"
            android:textColorHint="@color/white"
            android:textSize="@dimen/x40"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:background="@drawable/folder_out_line"
            android:text="提交"
            android:textColor="@color/white"
            android:layout_marginTop="@dimen/y35"
            android:layout_marginBottom="@dimen/y35"
            android:layout_gravity="center"
            android:id="@+id/start_search_submmit_bt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

</LinearLayout>