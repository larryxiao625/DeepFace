<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

    <style name="CompareItemText">
        <item name="android:textSize">@dimen/y42</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="VerifyItemText">
        <item name="android:textSize">@dimen/y42</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="LibraryEditLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/y100</item>
    </style>
    
    <style name="LibraryText">
        <item name="android:textStyle">bold</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/y42</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">@dimen/x260</item>
    </style>

    <style name="LibraryEditText">
        <item name="android:paddingLeft">@dimen/x260</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/y42</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@null</item>
        <item name="android:textColorHint">#909aa4</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:maxLines">1</item>
        <item name="android:maxLength">40</item>
    </style>

    <style name="TabLayout" parent="android:Widget">
        <item name="tabMaxWidth">264dp</item>
        <item name="tabIndicatorColor">@color/lite_blue</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabPaddingStart">12dp</item>
        <item name="tabPaddingEnd">12dp</item>
        <item name="tabTextAppearance">@style/Tab</item>
        <item name="tabSelectedTextColor">@color/white</item>
    </style>

    <style name="Tab" parent="TextAppearance.AppCompat.Button">
        <item name="android:textSize">@dimen/y42</item>
        <item name="android:textColor">@color/white</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="ConfigTitle">
        <item name="android:paddingLeft">@dimen/x15</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingTop">@dimen/y30</item>
        <item name="android:textSize">@dimen/y36</item>
        <item name="android:textColor">#8ee7e1</item>
    </style>

    <style name="ConfigItemTitle">
        <item name="android:drawablePadding">@dimen/x20</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_height">@dimen/x111</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">@dimen/y36</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ConfigItemTitle2" parent="ConfigItemTitle">
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="ConfigLayout1">
        <item name="android:background">@drawable/out_line_bg</item>
        <item name="android:layout_marginTop">@dimen/y20</item>
        <item name="android:paddingTop">@dimen/y20</item>
        <item name="android:paddingRight">@dimen/x30</item>
        <item name="android:paddingLeft">@dimen/x35</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="ConfigLayout2">
        <item name="android:background">@drawable/out_line_bg</item>
        <item name="android:paddingRight">@dimen/x30</item>
        <item name="android:paddingLeft">@dimen/x35</item>
        <item name="android:layout_marginTop">@dimen/y20</item>
        <item name="android:layout_height">@dimen/y190</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="SystemManageText">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/y42</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="LibraryButton">
        <item name="android:drawablePadding">@dimen/x20</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_height">@dimen/x80</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">@dimen/x36</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="databaseCol">
        <item name="android:gravity">center</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">@dimen/y36</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="databaseItemCol">
        <item name="android:gravity">center</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">@dimen/y32</item>
        <item name="android:textColor">@color/white</item>
    </style>


    <style name="LoginEdit">
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:padding">8dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:background">#0c1d51</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:textCursorDrawable">@null</item>
    </style>

    <style name="LoginButton">
        <item name="android:layout_marginBottom">@dimen/y100</item>
        <item name="android:layout_width">@dimen/x420</item>
        <item name="android:layout_height">@dimen/y120</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/lite_blue</item>
        <item name="android:background">@drawable/login_button_bg</item>
    </style>

    <style name="SwitchLoginText">
        <item name="android:padding">@dimen/y20</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="libraryManageItemText">
        <item name="android:gravity">center</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">@dimen/y30</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="libraryManageItemButton">
        <item name="android:gravity">center</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">@dimen/x110</item>
        <item name="android:textSize">@dimen/y60</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="DialogEditTextTheme">
        <item name="colorControlNormal">@color/lite_blue</item>
    </style>

    <style name="CompareHistoryItemText">
        <item name="android:gravity">center_vertical</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">@dimen/y36</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="MoreInfoItemText">
        <item name="android:gravity">center_vertical</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">@dimen/y45</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>
</resources>
